<Window x:Class="HeliosBIM.FirstCommandWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeliosBIM"
             mc:Ignorable="d" 
             Title="HELIOS BIM | AUTOCAD API | DASHBOARD"
             d:DesignHeight="450" d:DesignWidth="800"
             Width="500" Height="300"
             FontSize="20">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="Welcome to HeliosBIM" />

        <Button HorizontalAlignment="Right" 
                Grid.Row="1" 
                Content="CLICK TO CMD" 
                Width="200" 
                Click="ClickToCmd" />
        <Button HorizontalAlignment="Left" 
                Grid.Row="1" 
                Content=" Ve be tong lot" 
                Width="200" Click="ClickToDrawBtl" 
                />

    </Grid>
</Window>
